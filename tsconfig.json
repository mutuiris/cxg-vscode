{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@contextextendedguard/shared": ["packages/shared/src"],
      "@contextextendedguard/sdk": ["packages/sdk/src"],
      "@contextextendedguard/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*", "services/**/*"],
  "exclude": ["node_modules", "dist", "build", "out"]
}